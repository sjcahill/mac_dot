{
    // workbench config options
    "material-icon-theme.opacity": 0.75,
    "workbench.colorTheme": "Material Theme High Contrast",
    "workbench.iconTheme": "material-icon-theme",
    "window.zoomLevel": 1,
    // debug console config options
    "debug.console.fontSize": 11,
    // editor config options
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.detectIndentation": false,
    "editor.fontFamily": "JetBrainsMono Nerd Font, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 11,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.inlineSuggest.enabled": true,
    "editor.semanticTokenColorCustomizations": {
        "enabled": true
    },
    "editor.snippetSuggestions": "top",
    // eslint config options
    "eslint.packageManager": "yarn",
    // file/fs config options
    "files.associations": {
        "*.yml": "yaml"
    },
    // indent rainbow config options
    "indentRainbow.indentSetter": {},
    "indentRainbow.colors": [
        "rgba(255,255,64,0.07)",
        "rgba(127,255,127,0.07)",
        "rgba(255,127,255,0.07)",
        "rgba(79,236,236,0.07)"
    ],
    // markdown config options
    "markdown.preview.fontSize": 12,
    // python config options
    "python.condaPath": "/opt/homebrew/Caskroom/miniforge/base/bin/python",
    "python.defaultInterpreterPath": "/opt/homebrew/Caskroom/miniforge/base/bin/python",
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=100"
    ],
    // redhat ?
    "redhat.telemetry.enabled": false,
    // terminal config options
    "terminal.external.osxExec": "Kitty.app",
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
    "terminal.integrated.fontSize": 11,
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.persistentSessionReviveProcess": "onExitAndWindowClose",
    "terminal.integrated.persistentSessionScrollback": 200,
    "terminal.integrated.shellIntegration.history": 1000,
    // typescript config options
    "typescript.format.insertSpaceAfterConstructor": true,
    "typescript.format.insertSpaceBeforeFunctionParenthesis": true,
    // rust config options
    "rust-analyzer.inlayHints.closingBraceHints.enable": false,
    "rust-analyzer.inlayHints.bindingModeHints.enable": true,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.inlayHints.typeHints.hideClosureInitialization": true,
    "rust-analyzer.inlayHints.typeHints.hideNamedConstructor": true,
    // vscode vim plugin config options
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.normal": "block",
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Esc>",
                "l"
            ]
        }
    ],
    // yaml config options
    "yaml.schemas": {
        "file:///Users/sj/.vscode/extensions/atlassian.atlascode-2.10.12/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
    },
    // Language-specific editor settings
    "[hcl]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "editor.insertSpaces": true
    },
    "[javascript]": {
        "editor.maxTokenizationLineLength": 2500,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
    },
    "[python]": {
        "editor.formatOnSave": true,
    },
    "[rust]": {
        "editor.autoClosingBrackets": "always",
        "editor.inlayHints.enabled": "offUnlessPressed"
    },
    "[terraform]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "editor.insertSpaces": true
    },
    "[terraform-vars]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "editor.insertSpaces": true
    },
    "[typescript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.formatOnType": false,
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "full",
        "editor.formatOnType": true,
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        }
    },
}
